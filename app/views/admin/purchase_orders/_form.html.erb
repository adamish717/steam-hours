<%= simple_form_for [:admin, @purchase_order], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@purchase_order[:title]) %>
  <%= f.input :description %>
  <%= error_span(@purchase_order[:description]) %>
  <%= f.input :active %>
  <%= error_span(@purchase_order[:active]) %>
  <%= f.association :client %>
  <%= error_span(@purchase_order[:client_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_purchase_orders_path, :class => 'btn btn-default' %>
<% end %>
